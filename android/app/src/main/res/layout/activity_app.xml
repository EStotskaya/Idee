<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.code_and_fix.idee.AppActivity"
    android:id="@+id/drawerLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/BACK"
        android:id="@+id/colorBar"

        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:id="@+id/logInfo"
        android:layout_below="@+id/colorBar"
        android:background="@drawable/text"
        android:gravity="start"
        android:textSize="20sp"
        android:textStyle="italic"
        android:clickable="true"
        android:fontFamily="sans-serif-thin"
        android:elevation="2dp"/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toRightOf="@+id/logInfo"
        android:src="@drawable/profile_pictures"
        android:layout_below="@+id/colorBar"
        android:id="@+id/profilePic"
        />

    <FrameLayout android:id="@+id/mainFrame"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logInfo"
        />

    </RelativeLayout>
    
    <ListView
        android:id="@+id/drawer"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:background="@color/LIST"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:textSize="20sp"
        >

    </ListView>


</android.support.v4.widget.DrawerLayout>
