<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.code_and_fix.idee.NewIdeaFragment"
    >

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/BROWN">

    <EditText android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="@string/new_idea_body"
        android:fontFamily="sans-serif-thin"
        android:maxLength="100"
        android:id="@+id/ideaBody"
        android:elegantTextHeight="true"
        android:singleLine="false"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="5"
        android:background="@drawable/oldschool_border"
        android:elevation="2dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_tag"
        android:textColor="@color/BACK"
        android:background="@android:color/transparent"
        android:id="@+id/addTag"
        android:layout_below="@+id/ideaBody"
        android:layout_alignLeft="@+id/ideaBody"
        android:layout_marginTop="10dp"
        />

   </RelativeLayout>
</FrameLayout>
