<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.code_and_fix.idee.NewIdeaFragment"
    android:background="@color/WHITE"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relLay"
        >

        <EditText android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="@string/new_idea_body"
            android:paddingLeft="10dp"
            android:fontFamily="sans-serif-thin"
            android:maxLength="100"
            android:id="@+id/ideaBody"
            android:elegantTextHeight="true"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="5"
            android:elevation="2dp"
            android:textStyle="italic"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/colorLine"
            android:layout_below="@+id/ideaBody"
            android:background="@color/BACK"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_tag"
            android:textColor="@color/BACK"
            android:background="@android:color/transparent"
            android:id="@+id/addTag"
            android:layout_below="@+id/colorLine"
            android:layout_alignLeft="@+id/ideaBody"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-thin"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_pic"
            android:textColor="@color/BACK"
            android:background="@android:color/transparent"
            android:id="@+id/makePic"
            android:layout_below="@+id/addTag"
            android:layout_alignLeft="@+id/ideaBody"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-thin"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pick_pic"
            android:textColor="@color/BACK"
            android:background="@android:color/transparent"
            android:id="@+id/takePic"
            android:layout_below="@+id/addTag"
            android:layout_alignRight="@+id/ideaBody"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="sans-serif-thin"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageFrame"
            android:layout_below="@+id/makePic"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:id="@+id/submit"
            android:layout_marginBottom="67dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="&quot;sans-serif-condensed&quot;"
            android:textColor="@color/DARKRED"
            android:textColorHighlight="@color/LIST"
            android:textSize="25sp"
            android:background="@android:color/transparent" />

    </RelativeLayout>
</FrameLayout>
